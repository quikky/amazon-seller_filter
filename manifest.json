{
  "manifest_version": 3,
  "name": "AmazonSeller Filter",
  "version": "0.1.0",
  "description": "amazon seller filter of amazon.co.jp",
  "content_scripts": [{
    "matches": ["https://www.amazon.co.jp/s?k=*"],
    "js": ["script.js"]
  }],
  "icons": {
    "128": "icons/on2.png"
  },
  "declarative_net_request":{
    "rule_resources":[
        {
            "id":"ruleset",
            "enabled":true,
            "path":"ruleset.json"
        }
    ]
},
  "background": {
    "service_worker": "background.js"
  },
  "action": {},
  "permissions": [
    "tabs",
    "activeTab",
    "webRequest",
    "declarativeNetRequest"
  ],
  "host_permissions":[
    "*://amazon.co.jp/*"
]
}